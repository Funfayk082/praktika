<Window x:Class="Autovokzal_v1._0.PlaneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autovokzal_v1._0"
        mc:Ignorable="d"
        Title="Отдел планирования" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="24" HorizontalAlignment="Center" Margin="50">Выберите список:</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="125" Height="50" Margin="30" Click="Button_Click1">Список водителей</Button>
            <Button Width="125" Height="50" Margin="30" Click="Button_Click2">Список транспорта</Button>
            <Button Width="125" Height="50" Margin="30" Click="Button_Click3">Список маршрутов</Button>
        </StackPanel>
    </Grid>
</Window>
