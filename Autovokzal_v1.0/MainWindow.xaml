<Window x:Class="Autovokzal_v1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autovokzal_v1._0"
        mc:Ignorable="d"
         Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Width="90">Выберите отдел</TextBlock>
            <ComboBox x:Name="Dep_Choose" Width="200" Height="20" SelectionChanged="Dep_Choose_SelectionChanged">
                <ComboBoxItem Name="HR">Отдел кадров</ComboBoxItem>
                <ComboBoxItem Name="Plane">Отдел планирования</ComboBoxItem>
                <ComboBoxItem Name="Prod">Отдел производства</ComboBoxItem>
                <ComboBoxItem Name="Finance">Отдел бухгалтерии/финансов</ComboBoxItem>
            </ComboBox>
            <Button x:Name="Go_Button" Width="100" Height="30" Margin="10" Click="Go_Button_Click">Перейти</Button>
        </StackPanel>
    </Grid>
</Window>